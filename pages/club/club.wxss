/* pages/club/club.wxss */

.container {
  background-color: #f5f5f5;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.main {
  width: 100%;
}

.club_item {
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: space-between;
  margin: 0.5rem;
  padding: 0.3rem;
  background-color: white;
  /* box-shadow: 2px 2px 2px 0px #e5e5e5; */
}

.item_left {
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: space-between;
}

.item_img {
  width: 50px;
  height: 50px;
  margin: 0.3rem;
}

.item_middle {
  display: block;
  margin-left: 0.5rem;
  line-height: 180%;
}

.item_name {
  font-size: 10pt;
  font-weight: bold;
  text-align: left;
}

.item_address {
  display: flex;
  align-items: center;
  text-align: center;
  color: #8a8a8a;
  font-size: 9pt;
}

.item_address image {
  width: 20px;
  height: 20px;
}

.item_address text {
  font-size: 9pt;
}

.item_memo {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-align: left;
}

.item_btn {
  background-color: white;
  border: 1px solid #03a9f4;
  font-size: 9pt;
  padding: 0.3rem 1rem;
  text-align: center;
  color: #03a9f4;
  font-weight: bold;
  margin: 0.3rem;
  border-radius: 3px;
}
