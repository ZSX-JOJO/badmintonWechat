<!--pages/mine/mine.wxml-->
<view class='container'>
  <view class='userinfo'>
    <view class='avator'>
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view class='nick'>
      <open-data type="userNickName"></open-data>
    </view>
  </view>
  <view class='main_info'>
    <view class='middle'>
      <view class='middle_left'>
        <text class='font_light'>累计时长：</text>
        <text class='font_bold'>0小时</text>
      </view>
      <view class='middle_right'>
        <text class='font_light'>本月打球排名：</text>
        <image src='/images/icon_first1.png'></image>
        <text class='font_bold'>No.1</text>
      </view>
    </view>
    <view class='bottom'>
      <view class='bottom_item' bindtap='goto'>
        <text>我的俱乐部</text>
        <image src='/images/icon_rightgo.png'></image>
      </view>
      <view class='bottom_item' bindtap='goto'>
        <text>邀请好友</text>
        <image src='/images/icon_rightgo.png'></image>
      </view>
      <view class='bottom_item' bindtap='goto'>
        <text>使用帮助</text>
        <image src='/images/icon_rightgo.png'></image>
      </view>
      <view class='bottom_item' bindtap='goto'>
        <text>关于相约羽球吧</text>
        <image src='/images/icon_rightgo.png'></image>
      </view>
    </view>
  </view>

</view>