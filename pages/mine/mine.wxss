/* pages/mine/mine.wxss */
.userinfo{
  width: 750rpx;  
  height: 320rpx;  
  display: flex;  
  flex-direction: column;  
  align-items: center;  
  background-color: #03A9F4;
  color: white;
  position: fixed;
  top: 0;
}

.avator{
  overflow:hidden;  
  display: block;  
  width: 160rpx;  
  height: 160rpx;  
  margin: 20rpx;  
  margin-top: 50rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.nick{
  font-size: 10pt;
}

.main_info{
  margin-top: 320rpx;
}

.middle{
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: space-between;
  font-size: 9pt;
  padding: 1rem;
  border-bottom: 1px solid #e5e5e5;
}

.middle_right{
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: center;
}

.middle_right image{
  width: 15px;
  height: 15px;
  margin-right:0.3rem;
}

.font_light{
  color: #8a8a8a;
}

.font_bold{
  font-weight: bold;
}

.bottom{
  font-size: 9pt;
  padding:0.5rem 0.5rem 0.5rem 1rem;
}

.bottom_item{
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: space-between;
  border-bottom: 1px solid #f1f1f1;
  margin: 0.5rem 0;
  padding: 0.5rem 0;
}

.bottom_item image{
  width: 25px;
  height: 25px;
}