/* pages/apply/apply.wxss */

.container {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.tip {
  position: fixed;
  top: 0;
  width: 100%;
  height: 50px;
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: center;
  font-size: 10pt;
  font-weight: bold;
  background-color: #03a9f4;
  color: white;
}

.form {
  width: 100%;
  background-color: #f9f9f9;
  display: flex;
  justify-items: center;
  text-align: center;
  justify-content: center;
  padding: 3rem 0;
  margin-top: 50px;
}

.section {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  text-align: center;
  font-size: 10pt;
  padding: 0.5rem;
}

.section text {
  width: 30%;
  margin-right: 1rem;
  color: #8a8a8a;
}

.section input {
  width: 100%;
  border-bottom: 1px solid #e5e5e5;
  height: 2rem;
  line-height: 200%;
  border-radius: 3px;
  font-size: 11pt;
}

.radio_group {
  display: flex;
  width: 90%;
  text-align: center;
  font-size: 11pt;
  padding: 0.5rem;
  align-items: center;
  justify-content: center;
}

radio {
  transform: scale(0.7);
}

.radio_radio {
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: center;
}

.btn_area {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  margin-top: 3rem;
}

.submit_btn {
  display: flex;
  width: 60px;
  font-size: 9pt;
  align-items: center;
  text-align: center;
  justify-content: center;
  padding: 0;
  margin: 0 2rem 0 0;
  background-color: #03a9f4;
  color: white;
  border: none;
}

.reset_btn {
  display: flex;
  width: 60px;
  font-size: 9pt;
  align-items: center;
  text-align: center;
  justify-content: center;
  padding: 0;
  margin: 0;
  background-color: #03a9f4;
  color: white;
  border: none;
}
