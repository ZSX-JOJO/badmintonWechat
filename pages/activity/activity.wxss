/* pages/activity/activity.wxss */

.container {
  display: block;
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
  margin-bottom: 55px;
}

.back_img {
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: center;
  text-align: center;
  background-color: #03a9f4;
  position: fixed;
  height: 80px;
  top: 0;
}

.back_img image {
  width: 240px;
  height: 80px;
}

.main_content {
  margin-top: 80px;
  margin-bottom: 55px;
}

.top_header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  text-align: center;
  font-size: 9pt;
  padding: 0.5rem;
  background-color: white;
}

.top_header_front {
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: center;
}

.top_header_front_avator {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 0.5rem;
}

.top_header_front_user {
  display: flex;
  align-items: center;
  justify-content: space-between;
  text-align: center;
}

.top_header_middle {
  line-height: 180%;
  text-align: left;
}

.top_header_middle_clubName {
  font-weight: bold;
}

.top_header_front_user {
  color: #8a8a8a;
}

.top_header_end {
  display: flex;
  width: 30px;
  height: 30px;
  align-items: center;
  text-align: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #03a9f4;
}

.top_header_end image {
  width: 15px;
  height: 15px;
}

.top_middle {
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
  background-color: white;
}

.middle_item {
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: space-between;
  font-size: 9pt;
  margin: 0.5rem;
}

.middle_item image {
  width: 20px;
  height: 20px;
}

.middle_item_right {
  width: 90%;
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: space-between;
  border-bottom: 1px solid #e5e5e5;
  padding: 0.5rem 0;
  color: #8a8a8a;
}

.middle_item_right_bottom {
  width: 90%;
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: space-between;
  padding: 0.5rem 0;
  color: #8a8a8a;
}

.middle_item_font {
  color: #03a9f4;
  background-color: white;
  border: 1px solid #03a9f4;
  border-radius: 5px;
  padding: 0 0.5rem;
  font-size: 8pt;
}

.bottom_top_header {
  display: flex;
  align-items: center;
  text-align: center;
  font-size: 9pt;
  margin: 0.5rem;
}

.bottom_top_header image {
  width: 20px;
  height: 20px;
}

.bottom_top_header text {
  font-weight: bold;
  margin-left: 1rem;
}

.bottom_top_main {
  display: flex;
  align-items: center;
  text-align: center;
  font-size: 8pt;
  color: #2c2c2c;
  background-color: white;
  padding: 0.5rem 0 0.5rem 2rem;
}

.bottom_top_main_item {
  display: flex;
  align-items: center;
  text-align: left;
  justify-content: space-around;
  margin: 0 0.5rem;
  padding: 0.5rem;
  line-height: 200%;
}

.bottom_top_main_item image {
  width: 15px;
  height: 15px;
}

.main_opt {
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 50px;
  background-color: #03a9f4;
}

.main_opt image {
  width: 20px;
  height: 20px;
}

.main_opt text {
  font-size: 10pt;
  margin-left: 0.5rem;
  color: white;
}

.middle_item_icon {
  display: flex;
  align-items: center;
  justify-content: space-between;
  text-align: center;
}

.middle_item_icon image {
  width: 15px;
  height: 15px;
  margin-left: 0.5rem;
}