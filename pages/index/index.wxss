/**index.wxss**/

.container {
  background-color: #f5f5f5;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.header {
  display: flex;
  align-items: center;
  text-align: center;
  background-color: #03a9f4;
  color: white;
  width: 100%;
  height: 50px;
  font-size: 9pt;
  position: fixed;
  top: 0;
}

.big {
  font-weight: bold;
}

.on {
  border-bottom: 2px solid white;
}

.header_view {
  display: flex;
  align-items: center;
  text-align: center;
  width: 560px;
  height: 100%;
}

.club_item {
  width: 100px;
  height: 100%;
}

.club_item view {
  margin: 0 0.5rem;
}

.main {
  display: block;
  background-color: #f5f5f5;
  width: 100%;
  height: 100%;
  margin-top: 50px;
}

.main_item {
  background-color: white;
  margin: 0.5rem;
  padding: 0.5rem;
}

.item_top {
  font-size: 10pt;
  font-weight: bold;
}

.item_middle {
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: space-between;
  font-size: 10pt;
  padding: 0.2rem;
}

.middle_start {
  font-size: 9pt;
}

.middle_end {
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: space-between;
  font-size: 8pt;
  color: #8a8a8a;
}

.item_end {
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: space-between;
  font-size: 10pt;
  padding: 0.2rem;
}

.middle_end image {
  width: 25px;
  height: 25px;
}

.item_status_1 {
  font-size: 8pt;
  border: 1px solid #f57f17;
  color: #f57f17;
  padding: 0.1rem 0.2rem;
}

.item_status_2 {
  font-size: 8pt;
  border: 1px solid #03a9f4;
  color: #03a9f4;
  padding: 0.1rem 0.2rem;
}

.item_status_3 {
  font-size: 8pt;
  border: 1px solid #424242;
  color: #424242;
  padding: 0.1rem 0.2rem;
}

.end_icon {
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: space-between;
  font-size: 8pt;
  color: #8a8a8a;
}

.end_icon image {
  width: 25px;
  height: 25px;
}

.no_activity {
  display: flex;
  background-color: white;
  margin-top: 50px;
  align-items: center;
  justify-content: center;
  text-align: center;
  height: 100%;
  width: 100%;
  padding: 50%;
  font-size: 15pt;
}

.no_activity text {
  background-image: linear-gradient( 135deg, #ABDCFF 10%, #03a9f4 100%);
  -webkit-text-fill-color: transparent; /* 将字体设置成透明色 */
  -webkit-background-clip: text; /* 裁剪背景图，使文字作为裁剪区域向外裁剪 */
  -webkit-background-size: 200% 100%;
  -webkit-animation: masked-animation 4s linear infinite;
}

@keyframes masked-animation {
  0% {
    background-position: 0 0;
  }

  100% {
    background-position: -100% 0;
  }
}
